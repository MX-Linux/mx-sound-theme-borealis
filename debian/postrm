#!/bin/sh

set -e

remove_divert() {
  if [ ! -z "$(dpkg-divert --list $1)" ]; then
    dpkg-divert --quiet --remove --package mx-sound-theme-borealis --rename \
      --divert $1.distrib $1
  fi
}

if [ "$1" = "remove" ]; then
  remove_divert /usr/share/sounds/Borealis/stereo/window-unminimized.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/Startup1_3.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/phone-incoming-call.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/service-login.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/desktop-switch-right.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/K3b_success.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/dialog-question.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/desktop-login.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/install.sh
  remove_divert /usr/share/sounds/Borealis/stereo/Startup1_1.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/device-removed.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/dialog-warning.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/button-toggle-off.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/trash-empty.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/device-added.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/uninstall.sh
  remove_divert /usr/share/sounds/Borealis/stereo/README
  remove_divert /usr/share/sounds/Borealis/stereo/message-new-instant.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/dialog-information.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/Startup1_2.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/Kopete_status.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/Knock.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/window-minimized.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/window-maximized.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/Exit1_2.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/dialog-error.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/service-logout.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/system-ready.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/phone-outgoing-busy.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/desktop-logout.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/window-close.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/button-pressed.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/desktop-switch-left.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/button-toggle-on.ogg
  remove_divert /usr/share/sounds/Borealis/stereo/window-unmaximized.ogg
  remove_divert /usr/share/sounds/Borealis/index.theme
fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
